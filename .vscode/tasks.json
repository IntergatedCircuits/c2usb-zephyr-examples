{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "West update",
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "type": "process",
            "command": "west",
            "args": [
                "update"
            ]
        },
        {
            "label": "West patch",
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "type": "process",
            "command": "west",
            "args": [
                "patch"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "West update"
            ]
        },
        {
            "label": "Build usb-keyboard for nrf52840dk",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "type": "process",
            "command": "west",
            "args": [
                "build",
                "--build-dir",
                "${cwd}/usb-keyboard/build/nrf52840dk",
                "${cwd}/usb-keyboard",
                "--board",
                "nrf52840dk/nrf52840"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build usb-mouse for nrf52840dk",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "type": "process",
            "command": "west",
            "args": [
                "build",
                "--build-dir",
                "${cwd}/usb-mouse/build/nrf52840dk",
                "${cwd}/usb-mouse",
                "--board",
                "nrf52840dk/nrf52840"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}